<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/currentPlayer"
        android:layout_width="413dp"
        android:layout_height="110dp"
        android:layout_marginTop="621dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="624dp"
        android:background="@color/teal_700"
        android:onClick="startGame"
        android:text="Start New Game"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/table"
        android:layout_width="381dp"
        android:layout_height="358dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <LinearLayout
        android:id="@+id/board_layout"
        android:layout_width="378dp"
        android:layout_height="356dp"
        android:layout_below="@id/table"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/table"
        app:layout_constraintEnd_toEndOf="@id/table"
        app:layout_constraintStart_toStartOf="@+id/table"
        app:layout_constraintTop_toTopOf="@id/table"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="374dp"
            android:layout_height="118dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_00"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_01"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_02"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="374dp"
            android:layout_height="118dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_10"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"

                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_11"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_12"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="374dp"
            android:layout_height="118dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_20"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_21"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />

            <ImageButton
                android:id="@+id/button_22"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty"
                android:onClick="onClick"
                app:srcCompat="@android:drawable/dark_header" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>